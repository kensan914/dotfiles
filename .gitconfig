[user]
	name = kento.toriumi
	email = kento.toriumi@gmail.com

[alias]
# use 'git h <command>' for help, use 'git la' to list aliases  =====
#

# alias	=====
alias	=	"!grep '\t=' ~/.gitconfig | less" # xxx
al	=	!git alias

# commit	=====
cm	=	commit -m
ca	=	commit --amend

# push	=====
p	=	push
pf	=	push --force-with-lease

# status        =====
st      =       status

# branch        =====
br	=	branch
br-all  = branch -a -vv
br-current  = branch --show-current

# switch        =====
sw  =  switch
swc =  switch -c

# stash	=====
sh	=	stash

# log	=====
graph	=	log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
gr	=	!git graph

# cherry-pick	=====
cp	=	cherry-pick

#	rebase	=====
rb	=	rebase

#	reset	=====


[ghq]
	root = ~/ghq
